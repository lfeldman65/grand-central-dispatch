{
  "expo": {
    "name": "Referral Maker",
    "slug": "referralMaker",
    "version": "3.6.0",
    "orientation": "portrait",
    "icon": "./images/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": true,
      "bundleIdentifier": "com.referralmaker.referralmaker",
      "buildNumber": "22",
      "accessesContactNotes": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show relationships that are near you.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "package": "com.referralmaker.referralmaker",
      "adaptiveIcon": {
        "foregroundImage": "./images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./images/favicon.png",
      "config": {
        "firebase": {
          "apiKey": "AIzaSyAUfCXO4U5oUZ9GClgqn-bqv-kxiWuIQTQ",
          "measurementId": "G-FPEK1GJFRT"
        }
      }
    },
    "plugins": [
      "sentry-expo",
      "@react-native-firebase/app",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "f0fb0e2d-593f-46f3-805e-6df158477c4d"
      }
    }
  }
}
